<!--// modals //-->
<div id="modal_send_request" class="modal fade_in_and_scale modal_box_form js-modal[% ' hidden' IF !pop1_err || pop1_err == 1 || pop1_err == 0 %]">
    <div class="modal__inner js-modal_hide">
        <div class="modal__horisontal_inner js-modal_hide">
            <div class="modal__vertical_inner js-modal_hide">
                <div class="modal__content">
                    <div class="h3">Отправить заявку</div>
                    [% pop1_err_msg IF pop1_err != 1 && pop1_err> 0 %]
                    <form class="ph-6 js-validate" action="" method="post">
                      <input type="hidden" name="pop1" value="form_send"/>
                        <p>
                            <input class="field w-310" required="required" data-error-message-empty="вы не представились" type="text" id="modal_send_request_name" name="name" value="[% pop1_vls.name UNLESS pop1_err == 1 %]" placeholder="ФИО"/>
                            <span class="star ml-9"></span></p>
                        <p>
                            <input class="field w-310" required="required" data-error-message-empty="вы не указали email" data-error-message-correct="вы неверно указали email" id="modal_send_request_email" name="email" value="[% pop1_vls.email UNLESS pop1_err == 1 %]" type="email" placeholder="E-mail"/>
                            <span class="star ml-9"></span></p>
                        <p>
                            <input class="field w-310" type="tel" id="modal_send_request_phone" name="phone" value="[% pop1_vls.phone UNLESS pop1_err == 1 %]" placeholder="Телефон"/>
                        </p>
                        <p>
                            <textarea class="field w-310 h-140" id="modal_send_request_message" name="message" value="[% pop1_vls.message UNLESS pop1_err == 1 %]" name="text" placeholder="Сообщение"></textarea>
                        </p>
                        <p class="mb-14"> <span class="captcha w-310"><span class="fig"><script>out_capture();</script></span>
              <input class="field" required="required" data-error-message-empty="вы не указали код" data-error-message-correct="вы неверно указали код" type="text" name="capture_str" id="modal_send_request_captcha" placeholder="Проверочный код"/>
              </span> <span class="star ml-9"></span></p>
                        <p>
                            <button type="submit" class="button">Отправить</button>
                        </p>
                    </form>
                    <a class="modal__close_btn js-modal_hide" href="#"></a></div>
            </div>
        </div>
    </div>
    <div class="modal__bg js-modal_hide"></div>
</div>
<div id="modal_callback" class="modal fade_in_and_scale modal_box_form js-modal[% ' hidden' IF !pop2_err || pop2_err == 1 || pop2_err == 0 %]">
    <div class="modal__inner js-modal_hide">
        <div class="modal__horisontal_inner js-modal_hide">
            <div class="modal__vertical_inner js-modal_hide">
                <div class="modal__content">
                    <div class="h3">Обратный звонок</div>
                  [% pop2_err_msg IF pop2_err != 1 && pop2_err> 0 %]
                    <form class="ph-6 js-validate" action="" method="post">
                      <input type="hidden" name="pop2" value="form_send"/>
                        <p>
                            <input class="field w-310" required="required" data-error-message-empty="вы не представились" type="text" id="modal_callback_name" name="name" value="[% pop2_vls.name UNLESS pop2_err == 1 %]" placeholder="ФИО"/>
                            <span class="star ml-9"></span></p>
                        <p>
                            <input class="field w-310" type="tel" required="required" data-error-message-empty="вы не указали телефон" data-error-message-correct="вы неверно указали телефон" id="modal_callback_phone" name="phone" value="[% pop2_vls.phone UNLESS pop2_err == 1 %]" placeholder="Телефон"/>
                            <span class="star ml-9"></span></p>
                        <p>
                            <input class="field w-310" type="text" id="modal_callback_time" name="time" value="[% pop2_vls.time UNLESS pop2_err == 1 %]" placeholder="Время удобное для звонка"/>
                        </p>
                        <p>
                            <textarea class="field w-310 h-140" id="modal_callback_message" name="message" value="[% pop2_vls.message UNLESS pop2_err == 1 %]" name="text" placeholder="Ваш вопрос"></textarea>
                        </p>
                        <p class="mb-14"> <span class="captcha w-310"><span class="fig"><script>out_capture();</script></span>
              <input class="field" required="required" data-error-message-empty="вы не указали код" data-error-message-correct="вы неверно указали код" type="text" name="capture_str" id="modal_callback_captcha" placeholder="Проверочный код"/>
              </span> <span class="star ml-9"></span></p>
                        <p>
                            <button type="submit" class="button">Отправить</button>
                        </p>
                    </form>
                    <a class="modal__close_btn js-modal_hide" href="#"></a></div>
            </div>
        </div>
    </div>
    <div class="modal__bg js-modal_hide"></div>
</div>
<div id="modal_thanks" class="modal fade_in_and_scale box_thanks js-modal[% ' hidden' UNLESS pop1_err == 1 || pop2_err == 1 %]">
    <div class="modal__inner js-modal_hide">
        <div class="modal__horisontal_inner js-modal_hide">
            <div class="modal__vertical_inner js-modal_hide">
